<%- include('../template/head-start') %>
<%- include('../template/menu-atas') %>

<% if (poster.length < 1) { %>
    <h1>INVALID REQUEST</h1>
<% } else { %>

<div class="container pt-3">
    <% if (message) { %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-info-circle me-2"></i><%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <br>
    <div class="mt-3 mb-3">
        <div class="row d-flex justify-content-center">
            <div class="col-md-5 text-end pt-5">
                <% if (!poster[0].foto) { %>
                    <img src="/gambar/defaultprofile.png" width="200" height="200" style="object-fit: cover;" class="rounded-circle border p-1" alt="...">
                <% } else { %>
                    <img src="/upload/<%= poster[0].foto %>" width="200" height="200" style="object-fit: cover;" class="rounded-circle border p-1" alt="...">
                <% } %>
            </div>
            <div class="col">
                <div class="card border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= poster[0].username %>
                        </h4>
                        <p class="card-text">
                            <%= poster[0].nama_lengkap %> <br>
                            <% if (!poster[0].bio) { %>
                                <p>Hi! I'm new here :D</p>
                            <% } else { %>
                                <%- poster[0].bio.replaceAll("\n", '<br>') %>
                            <% } %>
                        </p>
                        <p class="card-text">
                            <small class="text-body-secondary">
                                <% if (!poster[0].last_update) { %>
                                    Last updated: -
                                <% } else { %>
                                    Last updated: <%= moment(poster[0].last_update).startOf('minute').fromNow() %> <%= moment(poster[0].last_update).format('(DD MMM YYYY HH:mm)') %>
                                <% } %>
                            </small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-7">
             

                <% for (let i = 0; i < poster.length; i++) { %>
                    <% 
                        let carousel_active1 = '';
                        let carousel_active2 = '';
                        let carousel_active3 = '';

                        if (poster[i].file1) {
                            carousel_active1 = 'active';
                        } else if (poster[i].file2) {
                            carousel_active2 = 'active';
                        } else if (poster[i].file3) {
                            carousel_active3 = 'active';
                        }
                    %>

                    <div class="card shadow-sm mb-5">
                        <div>
                            <% if (!poster[i].foto) { %>
                                <img src="/gambar/defaultprofile.png" class="rounded-circle p-2" height="50" style="object-fit: cover;" alt="...">
                            <% } else { %>
                                <img src="/upload/<%= poster[i].foto %>" class="rounded-circle border border-info p-1 m-2" height="50" width="50" style="object-fit: cover;" alt="...">
                            <% } %>
                            <b><%= poster[i].username %></b>
                            <span class="float-end p-3"><i class="fa-solid fa-ellipsis"></i></span>
                        </div>

                        <div id="carouselExample<%= poster[i].id %>" class="carousel slide bg-dark">
                            <div class="carousel-inner">
                                <% if (poster[i].file1) { %>
                                    <div class="carousel-item <%= carousel_active1 %>">
                                        <img src="/feed/<%= poster[i].file1 %>" class="d-block w-100" height="350" style="object-fit: contain;" alt="...">
                                    </div>
                                <% } %>
                                <% if (poster[i].file2) { %>
                                    <div class="carousel-item <%= carousel_active2 %>">
                                        <img src="/feed/<%= poster[i].file2 %>" class="d-block w-100" height="350" style="object-fit: contain;" alt="...">
                                    </div>
                                <% } %>
                                <% if (poster[i].file3) { %>
                                    <div class="carousel-item <%= carousel_active3 %>">
                                        <img src="/feed/<%= poster[i].file3 %>" class="d-block w-100" height="350" style="object-fit: contain;" alt="...">
                                    </div>
                                <% } %>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample<%= poster[i].id %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample<%= poster[i].id %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>

                        <div class="card-body">
                            <p class="card-text"><b><%= poster[i].username %></b> <%= poster[i].caption %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa-regular fa-thumbs-up"></i>
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <i class="fa-regular fa-comment"></i>
                                    </button>
                                </div>
                                <small class="text-body-secondary"><%= moment(poster[i].created_at).startOf('minute').fromNow() %></small>
                            </div>
                        </div>
                    </div>

                <% } %>
            </div>
        </div>
    </div>
</div>

<% } %>
<%- include('../template/head-end') %>
