<%- include('../template/head-start') %>
<%- include('../template/menu-atas') %>


<div class="container pt-3">
    <% if (message) { %>
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-info-circle me-2"></i><%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
    <% } %>
    <br>
    <h1>Kirim Postingan</h1>
    <div class="row d-flex justify-content-center">
        <div class="class bg-light">
            <div class="card-body">
                <form action="/posting/tambah" method="post">

                    <div class="row">
                        <div class=" col-lg-12 mb-3">
                            <label class="form-label">Caption</label>
                            <textarea name="form_caption" class="form-control"></textarea>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-4">
                            <label class="form-label">Media 1</label>
                            <input type="file" name="form_uploadfoto" accept=".png, .jpg, .jpeg, .svg, .webp, .mp4, .mkv">
                        </div>
                        <div class="col-lg-4">
                            <label class="form-label">Media 2</label>
                            <input type="file" name="form_uploadfoto" accept=".png, .jpg, .jpeg, .svg, .webp, .mp4, .mkv">
                        </div>
                        <div class="col-lg-4">
                            <label class="form-label">Media 3</label>
                            <input type="file" name="form_uploadfoto" accept=".png, .jpg, .jpeg, .svg, .webp, .mp4, .mkv">
                        </div>
                    </div>

            </div>
            <button type="submit" class="btn btn-primary mt-3">
                <i class="fa-solid fa-save me-1"></i> Post
            </button>
            </form>
        </div>
    </div>

<%- include('../template/head-end') %>